<resources>
    <color name="gestures_zone_view_background">#5038FFB2</color>
    <color name="gestures_zone_view_added_zones">#50FFB55B</color>
    <color name="gestures_zone_view_current_zone">#50FF4C82</color>

    <color name="my_post_color">#9BF853</color>
    <color name="reply_post_color">#f85e53</color>
    <color name="cross_thread_reply_post_color">#53EDF8</color>
    <color name="deleted_post_color">#B153F8</color>
    <color name="hot_post_color">#e32d2d</color>
    <color name="third_eye_post_color">#eda93b</color>

    <color name="new_apk_update_icon_color">#009000</color>
    <color name="new_crash_log_icon_color">#E54545</color>

    <style name="Chan.DefaultTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- These colors define how the window will look like before the main activity is created. -->
        <!-- Unfortunately we can\'t change these colors in runtime so it will always be like this.-->
        <item name="android:statusBarColor">#090909</item>
        <item name="android:navigationBarColor">#090909</item>
        <item name="android:windowBackground">#171616</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#090909</item>
        <item name="colorAccent">#707070</item>
        <item name="colorSecondary">#212121</item>
        <item name="colorError">#ff4444</item>
        <item name="android:textColor">#aeaed6</item>
        <item name="android:textColorHighlight">#707070</item>
        <item name="colorControlHighlight">#707070</item>
        <item name="android:colorControlHighlight">#707070</item>
        <item name="colorControlActivated">#151515</item>
    </style>

    <!-- Use this theme for color debugging. It will use magenta colors for UI elements that were not colored explicitly -->
    <style name="Chan.DebugTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">#090909</item>
        <item name="android:navigationBarColor">#090909</item>
        <item name="android:windowBackground">#171616</item>
        <item name="windowActionModeOverlay">true</item>

        <!-- These must use the Magenta color so it's easy for us to see what UI elements we forgot to apply colors to-->
        <item name="colorPrimary">#FF00FF</item>
        <item name="colorPrimaryDark">#FF00FF</item>
        <item name="colorAccent">#FF00FF</item>
        <item name="colorSecondary">#FF00FF</item>
        <item name="colorError">#FF00FF</item>
        <item name="android:textColor">#FF00FF</item>
        <item name="android:textColorHighlight">#FF00FF</item>
    </style>

    <!-- This theme is used for activities with no UI (SharingActivity) -->
    <style name="Chan.TranslucentActivityTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowShowAnimation">@null</item>
        <item name="android:windowHideAnimation">@null</item>
    </style>

</resources>
